@model Service
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni hizmet girişi</h1>

<form method="post">
    <label>Ikon</label>
    <input type="text" asp-for="Icon" class="form-control" style="border:1px solid #000" />
    <span asp-validation-for="Icon" class="text-danger"></span>
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid #000" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid #000" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />

    <button class="btn btn-primary">Hizmeti Ekle</button>



</form>

