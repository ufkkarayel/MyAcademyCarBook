@model Price
@{
    ViewData["Title"] = "CreatePrice";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araç Ödeme Planı Girişi</h1>

<form method="post">
    <label>Araba</label>
    @Html.DropDownListFor(x=>x.CarID,(List<SelectListItem>)ViewBag.v,new {@class="form-control",style="border:1px solid #000"})
    <br />
    <label>Ödeme Planı</label>
    <input type="text" asp-for="PriceType" class="form-control" style="border:1px solid #000" />
    <br />
    <label>Tutarı Giriniz</label>
    <input type="text" asp-for="PriceValue" class="form-control" style="border:1px solid #000" />
    <br />
    <button class="btn btn-primary">Ödeme Planı Ekle</button>

</form>

